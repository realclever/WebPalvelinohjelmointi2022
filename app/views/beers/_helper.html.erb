<table class="table table-hover">
  <thead>
    <tr>
      <th>Beer</th>
      <th>Average</th>
    </tr>
  </thead>
  <tbody>
  <tbody class="table-group-divider">
    <% @top_beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= round(beer.average_rating) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
