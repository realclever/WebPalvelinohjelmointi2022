<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= beer.name %>
  </p>
  <p>
    <strong>Style:</strong>
    <%= beer.style.name %>
  </p>
  <p>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, beer.brewery %>
  </p>
  <p>
  <% if beer.ratings.empty? %>
 <p>Beer has not yet been rated!</p>
<% else %>
 <%= "Beer has #{pluralize(beer.ratings.count, 'rating')} with an average of #{beer.average_rating}"  %>
<% end %>
</p>
</div>
