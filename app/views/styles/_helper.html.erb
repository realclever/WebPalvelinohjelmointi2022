<table class="table table-hover">
  <thead>
    <tr>
      <th>Style</th>
      <th>Average</th>
    </tr>
  </thead>
  <tbody>
  <tbody class="table-group-divider">
    <% @top_styles.each do |style| %>
      <tr>
        <td><%= style.name %></td>
        <td><%= round(style.average_rating) %></td>
      </tr>
    <% end %>
  </tbody>
</table>