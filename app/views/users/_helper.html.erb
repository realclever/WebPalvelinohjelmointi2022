<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Number of ratings</th>
    </tr>
  </thead>
  <tbody>
  <tbody class="table-group-divider">
    <% @top_users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.ratings.count %> ratings</td>
      </tr>
    <% end %>
  </tbody>
</table>
