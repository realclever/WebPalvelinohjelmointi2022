<table class="table table-hover">
  <thead>
    <tr>
    <th>Ranking</th>
      <th>User</th>
      <th>Number of ratings</th>
    </tr>
  </thead>
  <tbody>
  <tbody class="table-group-divider">
    <% @top_users.each_with_index do |user, index| %>
      <tr>
       <td><%= index +=1 %></td>
        <td><%= user.username %></td>
        <td><%= user.ratings.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
